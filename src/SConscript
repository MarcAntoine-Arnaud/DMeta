Import("env")

specification = env.StaticLibrary(
	'specification',
	Glob( 'specification/*.d' ) +
	Glob( 'specification/*/*.d' ),
	LINKFLAGS = [ '-m64', '-fPIC' ],
	DFLAGS = [ '-fPIC', '-unittest' ],
	LIBPATH = '/lib64',
	DPATH=['.']
)

comparator = env.StaticLibrary(
	'comparator',
	Glob( 'comparator/*.d' ),
	LINKFLAGS = [ '-m64', '-fPIC' ],
	DFLAGS = [ '-fPIC', '-unittest' ],
	LIBPATH = [ '/lib64', '#/build/src' ],
	DPATH= [ '.' ],
	LIBS = [ 'specification' ]
)

Export( 'specification' )
Export( 'comparator' )
